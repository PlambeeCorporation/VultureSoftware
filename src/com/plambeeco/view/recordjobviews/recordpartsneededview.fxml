<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<AnchorPane prefHeight="468.0" prefWidth="284.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.plambeeco.view.recordjobviews.RecordPartsNeededController">
   <children>
      <Label layoutX="10.0" layoutY="108.0" text="Quoted Parts Needed" />
      <TableView fx:id="tvPartsView" layoutX="4.0" layoutY="125.0" prefHeight="300" prefWidth="278.0">
        <columns>
          <TableColumn fx:id="partNameColumn" prefWidth="208.0" text="Part" />
          <TableColumn fx:id="partQuantityColumn" prefWidth="68.0" text="Quantity" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <Label layoutX="79.0" layoutY="14.0" text="Parts" />
      <ComboBox fx:id="cbPartsNeeded" layoutX="110.0" layoutY="10.0" onAction="#createNewPartName" prefHeight="25.0" prefWidth="149.0" />
      <Button layoutX="10.0" layoutY="75.0" mnemonicParsing="false" onAction="#createPart" prefHeight="25.0" prefWidth="125.0" text="Add Part" />
      <Label layoutX="19.0" layoutY="44.0" text="Quantity Needed" />
      <Button layoutX="80.0" layoutY="436.0" mnemonicParsing="false" onAction="#removePart" prefHeight="32.0" prefWidth="125.0" text="Remove Part" />
      <TextField fx:id="txtPartsQuantity" layoutX="110.0" layoutY="40.0" />
      <Button layoutX="142.0" layoutY="75.0" mnemonicParsing="false" onAction="#editPartName" prefHeight="25.0" prefWidth="125.0" text="Edit Part Name" />
   </children>
</AnchorPane>
